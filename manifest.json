{
  "manifest_version": 2,
  "name": "Backlog Ticket Guardian",
  "short_name": "Spoo Guards",
  "version": "0.1",
  "description": "Backlogチケットのステータス変更をチェックし、予定/実績が未入力の場合には登録を阻止します。",

  "icons": {
    "16":  "icons/icon16.png",
    "32":  "icons/icon32.png",
    "64":  "icons/icon64.png",
    "128": "icons/icon128.png"
  },

  /*
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  */

  "content_scripts": [
    {
      "matches": ["https://*.backlog.jp/*"],
      "js": [
        "bower_components/jquery/dist/jquery.min.js",
        "utils.js",
        "content-script.js"
      ]
    }
  ],

  "permissions": ["https://*.backlog.jp/*"]
}
